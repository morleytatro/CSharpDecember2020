<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>

<body>
    @if(@ViewBag.FavoriteColor != null)
    {
      <p>Your favorite color is @ViewBag.FavoriteColor.</p>
    }
    else
    {
      <p>Please submit your favorite color.</p>
    }
  <form asp-action="SubmitFavoriteColor" method="post">
    <input type="text" name="favoriteColor">
    <button>Submit</button>
  </form>
  <form asp-action="ResetColor" method="post">
    <button>Reset</button>
  </form>
</body>
</html>